@model IEnumerable<CyberCity.Models.SchoolViewModels.EnrollmentDateGroup>

@{
    ViewData["Title"] = "Student Statistics";
}

<h2>Student Statistics</h2>

<table>
    <tr>
        <th class="p-3">
            Enrollment Date
        </th>
        <th class="p-3">
            Total Students
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td align="center">
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td align="center">
                @item.StudentCount
            </td>
        </tr>
    }
</table>